{{#if story.isFeature}}
  <div class="w3-container">
    <h3><strong>{{#link-to 'story' story.id}}{{story.title}}{{/link-to}}</strong></h3>
    <ul>
      <li><strong>Author</strong>: {{story.author}}</li>
      <li><strong>Genre</strong>: {{story.genre}}</li>
      <li><strong>Content</strong>: {{story.content}}</li>
    </ul>
    <p><img style="height: 400px; width: 400px;"src={{story.images.mainImage}} alt={{story.title}}/></p>
  </div>
{{else}}
  <div class="w3-container">
    <h5><strong>{{#link-to 'story' story.id}}{{story.title}}{{/link-to}}</strong></h5>
    <ul>
      <li>Author: {{story.author}}</li>
      <li>Genre: {{story.genre}}</li>
      <li>Content: {{story.content}}</li>
    </ul>
    <p><img style="height: 200px; width: 200px;"src={{story.images.mainImage}} alt={{story.title}}/></p>
  </div>
  {{/if}}
